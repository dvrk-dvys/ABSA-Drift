# ABSA-Drift MLOps Pipeline Configuration

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# S3 Configuration
S3_DATA_BUCKET=absa-drift-data-dev
S3_MODEL_BUCKET=absa-drift-models-dev
S3_MONITORING_KEY=monitoring/drift_monitoring_history.parquet

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=absa_db
POSTGRES_USER=absa_user
POSTGRES_PASSWORD=absa_password
POSTGRES_PORT=5432

# Monitoring Configuration
DATA_LOAD_INTERVAL=3600
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SERVER_PORT=3000

# Email/SNS Configuration
SNS_ALERTS_TOPIC_ARN=arn:aws:sns:us-east-1:YOUR_ACCOUNT:absa-drift-alerts-dev
ALERT_EMAIL_RECIPIENTS=your-email@example.com

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=512

# MLflow Configuration
MLFLOW_TRACKING_URI=http://127.0.0.1:5001
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
MODEL_S3_BUCKET=absa-drift-models-dev
MODEL_S3_PATH=mlflow/1/models/YOUR_MODEL_ID/artifacts/

# Environment
ENVIRONMENT=dev
DEBUG_MODE=false
TEST_RUN=false
LOG_LEVEL=INFO

# Optional: For local development
PYTHONPATH=./src